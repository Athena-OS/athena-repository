pkgname="athena-calamares"
pkgver="3.2.60"
pkgrel="1"
pkgdesc="Calamares installer for Athena"
arch=("x86_64")
license=("custom")
source=("athena-calamares.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/lib"
  mkdir -p "${pkgdir}/usr/share"
  mkdir -p "${pkgdir}/usr/share/polkit-1/actions"
  mkdir -p "${pkgdir}/usr/share/applications"
  mkdir -p "${pkgdir}/usr/share/man/man8"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/scalable/apps"

  install -Dm755 "${srcdir}/usr/bin/calamares" "${pkgdir}/usr/bin/calamares"
  install -Dm755 "${srcdir}/usr/bin/calamares_polkit" "${pkgdir}/usr/bin/calamares_polkit"

  cp -rf "${srcdir}/usr/share/calamares" "${pkgdir}/usr/share/"
  cp -rf "${srcdir}/usr/share/applications/calamares.desktop" "${pkgdir}/usr/share/applications/"
  cp -rf "${srcdir}/usr/share/man/man8/calamares.8" "${pkgdir}/usr/share/man/man8/"
  cp -rf "${srcdir}/usr/share/icons/hicolor/scalable/apps/calamares.svg" "${pkgdir}/usr/share/icons/hicolor/scalable/apps/"
  cp -rf "${srcdir}/usr/lib/calamares" "${pkgdir}/usr/lib/"
  cp -rf "${srcdir}/usr/lib/libcalamares.so.3.2.60" "${pkgdir}/usr/lib/"
  cp -rf "${srcdir}/usr/lib/libcalamares.so" "${pkgdir}/usr/lib/"
  cp -rf "${srcdir}/usr/lib/libcalamaresui.so.3.2.60" "${pkgdir}/usr/lib/"
  cp -rf "${srcdir}/usr/lib/libcalamaresui.so" "${pkgdir}/usr/lib/"
  cp -rf "${srcdir}/usr/share/polkit-1/actions/com.github.calamares.calamares.policy" "${pkgdir}/usr/share/polkit-1/actions/"
  cp -rf "${srcdir}/usr/lib/libKF5Crash.so.5" "${srcdir}/usr/lib/libyaml-cpp.so.0.7" "${srcdir}/usr/lib/libQt5Xml.so.5" "${srcdir}/usr/lib/libQt5Svg.so.5" "${srcdir}/usr/lib/libQt5QuickWidgets.so.5" "${srcdir}/usr/lib/libQt5Widgets.so.5" "${srcdir}/usr/lib/libQt5Quick.so.5" "${srcdir}/usr/lib/libQt5Gui.so.5" "${srcdir}/usr/lib/libQt5QmlModels.so.5" "${srcdir}/usr/lib/libQt5Qml.so.5" "${srcdir}/usr/lib/libQt5Network.so.5" "${srcdir}/usr/lib/libKF5CoreAddons.so.5" "${srcdir}/usr/lib/libQt5Core.so.5" "${srcdir}/usr/lib/libstdc++.so.6" "${srcdir}/usr/lib/libm.so.6" "${srcdir}/usr/lib/libgcc_s.so.1" "${srcdir}/usr/lib/libc.so.6" "${pkgdir}/usr/lib/"
}
sha256sums=('b9ec9eb96de80609adf2eb2b563865067c81c768b9e3066828a3cd35e85adbe9')
