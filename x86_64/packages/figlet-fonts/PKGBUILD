pkgname="figlet-fonts"
pkgver="1.0.4"
pkgrel="1"
pkgdesc='Figlet Fonts.'
arch=("any")
url='https://github.com/xero/figlet-fonts'
license=('GPL3')
depends=('figlet')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "$pkgdir/usr/share/figlet/fonts"
  cp -rf "$srcdir"/usr/share/figlet/fonts/* "$pkgdir/usr/share/figlet/fonts/"
}
sha256sums=('22f41f936f08e1dda71b1b680db940b65cdf84ef1b720e3fa84f31e56702b7d4')
