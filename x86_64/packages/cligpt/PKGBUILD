# See COPYING for license details.

pkgname=cligpt
pkgver=v1.0.4.r0.ge0200b6
pkgrel=1
pkgdesc='ChatGPT but in the terminal.'
arch=('any')
url='https://github.com/paij0se/cligpt'
license=('custom')
depends=()
makedepends=('git' 'go')
source=("git+https://github.com/paij0se/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd $pkgname

    GOPATH="$srcdir" go mod download
    GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .

}

package() {
  cd $pkgname

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}
