pkgname="athena-system-installation"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Installation files for Athena"
arch=("x86_64")
license=("custom")
source=("athena-system-installation.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/xdg/autostart"
  mkdir -p "${pkgdir}/usr/lib/systemd/system"
  mkdir -p "${pkgdir}/usr/local/bin"

  cp -rf "${srcdir}/etc/xdg/autostart/athena-welcome-app.desktop" "${pkgdir}/etc/xdg/autostart/"
  cp -rf "${srcdir}/usr/lib/systemd/system/athena-graphical-target.service" "${pkgdir}/usr/lib/systemd/system/"
  cp -rf "${srcdir}"/usr/local/bin/* "${pkgdir}/usr/local/bin/"
}
sha256sums=('8fa104c92fcd042e0b7bee59f236c342b063da23e4cf16f48daff76e806a5455')
