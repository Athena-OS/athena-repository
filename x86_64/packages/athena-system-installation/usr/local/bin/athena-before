#!/bin/bash
echo "#################################"
echo "Start athena-before"
echo "#################################"
echo
echo "#################################"
echo "Populate Core Team keys"
echo "#################################"
echo
rm -rf /usr/share/pacman/keyrings/blackarch*
rm -rf /usr/share/pacman/keyrings/chaotic*
/usr/local/bin/strap.sh
rm -rf /usr/local/bin/strap.sh
echo
echo "#################################"
echo "Inherit the cursor theme on the used theme"
echo "#################################"
echo
sed -i "s/Inherits=.*/Inherits=$(gsettings get org.gnome.desktop.interface cursor-theme) /g" /usr/share/icons/default/index.theme
sed -i "s/'//g" /usr/share/icons/default/index.theme
echo
echo "#################################"
echo "Copy grub Vimix theme (archiso deletes /boot when making the ISO)"
echo "#################################"
mkdir -p /boot/grub/themes
cp -Rf /usr/share/grub/themes/Vimix /boot/grub/themes/
echo
echo "#################################"
echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/athena /etc/mkinitcpio.d/linux.preset
echo
echo "#################################"
echo "End athena-before"
echo "#################################"
echo
