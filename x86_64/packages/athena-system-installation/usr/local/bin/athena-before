#!/bin/bash
echo "#################################"
echo "Start athena-before"
echo "#################################"
echo
echo "#################################"
echo "Populate Core Team keys"
echo "#################################"
echo
pacman-key --init
pacman-key --populate
echo
echo "#################################"
echo "Set crontab"
echo "#################################"
systemctl enable cronie.service
echo
echo "#################################"
echo "Inherit the cursor theme on the used theme"
echo "#################################"
echo
sed -i "s/Inherits=.*/Inherits=Breeze_Hacked/g" /usr/share/icons/default/index.theme
echo
echo "#################################"
echo "Copy grub Vimix theme (archiso deletes /boot when making the ISO)"
echo "#################################"
mkdir -p /boot/grub/themes
cp -Rf /usr/share/grub/themes/Vimix /boot/grub/themes/
echo
echo "#################################"
echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/athena /etc/mkinitcpio.d/linux.preset
echo
echo "#################################"
echo "End athena-before"
echo "#################################"
echo
