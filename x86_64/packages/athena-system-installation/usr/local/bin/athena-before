#!/bin/bash
echo "#################################"
echo "Start athena-before"
echo "#################################"
echo
echo "#################################"
echo "Populate Core Team keys"
echo "#################################"
echo
pacman-key --init
pacman-key --populate archlinux
pacman-key --populate blackarch
pacman-key --populate chaotic
pacman-key --recv-keys E0CF5924036306BF --keyserver keyserver.ubuntu.com
echo
echo "#################################"
echo "Copy grub Vimix theme (archiso deletes /boot when making the ISO)"
echo "#################################"
mkdir -p /boot/grub/themes
cp -Rf /usr/share/grub/themes/Vimix /boot/grub/themes/
echo
echo "#################################"
echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/athena /etc/mkinitcpio.d/linux.preset
echo
echo "#################################"
echo "Installing AUR packages"
echo "#################################"
paru -S --noconfirm discord_arch_electron
echo
echo "#################################"
echo "End athena-before"
echo "#################################"
echo
