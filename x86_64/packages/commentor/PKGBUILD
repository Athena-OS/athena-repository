pkgname="commentor"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Extract all comments from the specified URL resource."
arch=("x86_64")
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/local/bin"

  install -Dm755 "${srcdir}/usr/local/bin/commentor" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/c_decorate" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/c_filter" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/c_cleanup" "${pkgdir}/usr/local/bin/"
}
sha256sums=('8a7c7f60e239b38b8ae0ffc64a25c4efdb7a713b47a7e4002d350ff6d80138fb')
