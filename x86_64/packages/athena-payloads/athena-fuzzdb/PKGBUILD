pkgname=athena-fuzzdb
_pkgname=fuzzdb
pkgver=475.5656ab2
pkgrel=1
pkgdesc='Attack and Discovery Pattern Dictionary for Application Fault Injection Testing.'
url='https://github.com/fuzzdb-project/fuzzdb'
arch=('any')
license=('BSD')
depends=()
makedepends=('git')
source=("git+https://github.com/fuzzdb-project/$_pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $_pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $_pkgname

  install -dm 755 "$pkgdir/usr/share/payloads/$_pkgname"

  install -Dm 644 -t "$pkgdir/usr/share/doc/$_pkgname/" README.md
  install -Dm 644 _copyright.txt \
    "$pkgdir/usr/share/licenses/$_pkgname/_copyright.txt"

  rm README.md _copyright.txt

  find -maxdepth 1 | grep -v \\.git |
  xargs -I{} cp -r {} "$pkgdir/usr/share/payloads/$_pkgname"
}