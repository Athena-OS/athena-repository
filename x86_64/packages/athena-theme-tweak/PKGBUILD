pkgname=athena-theme-tweak
pkgver=1.0.0
pkgrel=3
pkgdesc="Athena Theme Tweak Tool"
arch=('x86_64')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/local/bin"

  install -Dm755 "${srcdir}/usr/local/bin/athena-theme-tweak" "${pkgdir}/usr/local/bin/"
}

