pkgname="athena-calamares-config"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Calamares Configuration for Athena"
arch=("x86_64")
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc"
  mkdir -p "${pkgdir}/usr/lib/calamares/modules"  

  cp -rf "${srcdir}/etc/calamares" "${pkgdir}/etc/"
  cp -rf "${srcdir}/usr/lib/calamares/modules/ucode" "${pkgdir}/usr/lib/calamares/modules/"
}
sha256sums=('7eae14bff25001955acdb65b1a702f8e65c0ba7e2e0d7b430937327365861370')
