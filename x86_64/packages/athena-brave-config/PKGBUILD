pkgname=athena-brave-config
pkgver=1.0.0
pkgrel=1
pkgdesc="Brave configuration for Athena"
arch=('x86_64')
license=("custom")
depends=('brave-bin' 'profile-sync-daemon-brave')
source=("$pkgname.tar.gz")

package() {
  install -dm 700 "${pkgdir}/etc/skel/.config/BraveSoftware/Brave-Browser/Default"

  cp -rf "${srcdir}"/etc/skel/.config/BraveSoftware/Brave-Browser/Default/* "${pkgdir}/etc/skel/.config/BraveSoftware/Brave-Browser/Default/"
  cp -rf "${srcdir}/etc/skel/.config/BraveSoftware/Brave-Browser/Local State" "${pkgdir}/etc/skel/.config/BraveSoftware/Brave-Browser/"
  cp -rf "${srcdir}/etc/skel/.config/psd" "${pkgdir}/etc/skel/.config/"  
  
}
sha256sums=('b25ea17e8183fd3b93622829f78c72cedc0c2aa818bca04780919c037cc89191')
