pkgname=athena-brave-config
pkgver=1.0.0
pkgrel=1
pkgdesc="Brave configuration for Athena"
arch=('any')
license=("custom")
depends=('athena-nightab' 'brave-bin' 'profile-sync-daemon-brave')
source=("$pkgname.tar.gz")

package() {
  install -dm 700 "${pkgdir}/etc/skel/.config/BraveSoftware/Brave-Browser"

  cp -rf "${srcdir}/etc/skel/.config/BraveSoftware/Brave-Browser/Default" "${pkgdir}/etc/skel/.config/BraveSoftware/Brave-Browser/"
  cp -rf "${srcdir}/etc/skel/.config/BraveSoftware/Brave-Browser/Local State" "${pkgdir}/etc/skel/.config/BraveSoftware/Brave-Browser/"
  cp -rf "${srcdir}/etc/skel/.config/psd" "${pkgdir}/etc/skel/.config/"  
  
}
sha256sums=('1913ef14b52af9307539957ab30752a300619276686b91465d230592baf2a724')
