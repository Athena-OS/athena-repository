pkgname="athena-vscode-themes"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="VSCode themes for Athena"
arch=("x86_64")
license=("custom")
depends=('code')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel/.vscode-oss/extensions"
  code --install-extension "${srcdir}/etc/skel/.vscode-oss/extensions/thorerik.hacker-theme-2.0.0.vsix" --extensions-dir "${pkgdir}/etc/skel/.vscode-oss/extensions"
  code --install-extension "${srcdir}/etc/skel/.vscode-oss/extensions/carrie999.cyberpunk-2020-0.1.4.vsix" --extensions-dir "${pkgdir}/etc/skel/.vscode-oss/extensions"
  code --install-extension "${srcdir}/etc/skel/.vscode-oss/extensions/dhedgecock.radical-vscode-3.2.1.vsix" --extensions-dir "${pkgdir}/etc/skel/.vscode-oss/extensions"
  code --install-extension "${srcdir}/etc/skel/.vscode-oss/extensions/enkia.tokyo-night-0.8.4.vsix" --extensions-dir "${pkgdir}/etc/skel/.vscode-oss/extensions"
  code --install-extension "${srcdir}/etc/skel/.vscode-oss/extensions/hfac.msdos-theme-0.1.0.vsix" --extensions-dir "${pkgdir}/etc/skel/.vscode-oss/extensions"
  code --install-extension "${srcdir}/etc/skel/.vscode-oss/extensions/nur.just-black-3.1.1.vsix" --extensions-dir "${pkgdir}/etc/skel/.vscode-oss/extensions"
}
sha256sums=('7e01ccfe0b90689bc6323fa2c60925139c5879907339612d02f11217c0e98749')
