pkgname=athena-vscode-themes
pkgver=1.0.0
pkgrel=1
pkgdesc="VSCode themes for Athena"
arch=('any')
license=("custom")
depends=('code')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel/.vscode-oss"
  mkdir -p "${pkgdir}/etc/skel/.config/Code - OSS/User"
  
  cp -rf "${srcdir}/etc/skel/.config/Code - OSS/User/settings.json" "${pkgdir}/etc/skel/.config/Code - OSS/User/"

  cp -rf "${srcdir}/etc/skel/.vscode-oss/extensions" "${pkgdir}/etc/skel/.vscode-oss/"
}
sha256sums=('21c8d2ef82d2e3fb4092b2758e89316b0617530d94eadfbe2ddae56be97bf9e7')
