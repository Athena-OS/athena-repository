pkgname=textart
pkgver=1.0.0
pkgrel=1
pkgdesc="Text Art collection"
arch=('x86_64')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel/.local"

  cp -rf "${srcdir}/etc/skel/.local/textart" "${pkgdir}/etc/skel/.local/"

  install -Dm755 "${srcdir}"/etc/skel/.local/textart/fetch/*.textart "${pkgdir}/etc/skel/.local/textart/fetch/"
  install -Dm755 "${srcdir}"/etc/skel/.local/textart/color/*.textart "${pkgdir}/etc/skel/.local/textart/color/"
  install -Dm755 "${srcdir}"/etc/skel/.local/textart/color/icon/*.textart "${pkgdir}/etc/skel/.local/textart/color/icon/"
  install -Dm755 "${srcdir}"/etc/skel/.local/textart/color/stark/*.textart "${pkgdir}/etc/skel/.local/textart/color/stark/"

}
sha256sums=('c3df627c4b6ac9db4ba495e35b7aec56521ed7de1f761f0c10515c85d964eb06')
