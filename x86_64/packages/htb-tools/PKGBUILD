pkgname="htb-tools"
pkgver="1.0.4"
pkgrel="2"
pkgdesc="Hack The Box tools"
arch=("x86_64")
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/local/bin"
  mkdir -p "${pkgdir}/usr/share/icons/pwnage"  
  mkdir -p "${pkgdir}/usr/share/pwnage/hackthebox"  

  cp -rf "${srcdir}/usr/share/icons/pwnage/flags" "${pkgdir}/usr/share/icons/pwnage/"
  cp -rf "${srcdir}/usr/share/icons/pwnage/htb-flag.png" "${pkgdir}/usr/share/icons/pwnage/"
  cp -rf "${srcdir}/usr/share/icons/pwnage/htb-machines.png" "${pkgdir}/usr/share/icons/pwnage/"
  cp -rf "${srcdir}/usr/share/icons/pwnage/htb-reset.png" "${pkgdir}/usr/share/icons/pwnage/"
  cp -rf "${srcdir}/usr/share/icons/pwnage/htb-stop.png" "${pkgdir}/usr/share/icons/pwnage/"
  cp -rf "${srcdir}/usr/share/icons/pwnage/htb-website.png" "${pkgdir}/usr/share/icons/pwnage/"
  cp -rf "${srcdir}/usr/share/icons/pwnage/vpn-icon.png" "${pkgdir}/usr/share/icons/pwnage/"

  install -Dm755 "${srcdir}/usr/local/bin/htb-flag" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/htb-play" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/htb-reset" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/htb-stop" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/htb-spawn" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/htb-update" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/htb-vpn" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/prompt-reset" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/share/pwnage/hackthebox/htb-update.py" "${pkgdir}/usr/share/pwnage/hackthebox/"
}
sha256sums=('8f4f9cfd49ca6d0a05c2d5cbdd4e2f46c6bf02adcab3d659a8d14e72c933a6ee')
