pkgname="archlinux-tweak-tool"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Arch Linux Tweak Tool for Athena"
arch=("x86_64")
license=("custom")
source=("archlinux-tweak-tool.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share/applications"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/scalable/apps"
  mkdir -p "${pkgdir}/usr/share/polkit-1/actions"

  cp -rf "${srcdir}"/usr/bin/* "${pkgdir}/usr/bin/"
  cp -rf "${srcdir}/usr/share/applications/archlinux-tweak-tool.desktop" "${pkgdir}/usr/share/applications/"  
  cp -rf "${srcdir}/usr/share/icons/hicolor/scalable/apps/archlinux-tweak-tool.svg" "${pkgdir}/usr/share/icons/hicolor/scalable/apps/"
  cp -rf "${srcdir}/usr/share/polkit-1/actions/org.archlinux.tweaktool.policy" "${pkgdir}/usr/share/polkit-1/actions/"
  cp -rf "${srcdir}/usr/share/archlinux-tweak-tool" "${pkgdir}/usr/share/"
}
sha256sums=('00bb2b290a29d45dae3de7209f4bee52f7290371d8855db5c96c791071a9c42f')
