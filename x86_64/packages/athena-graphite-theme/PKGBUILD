pkgname="athena-graphite-theme"
pkgver="1.0.0"
pkgrel="2"
pkgdesc="Graphite Dark theme with Tela Circle Black Dark icons for Athena"
arch=("x86_64")
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/share/themes"
  mkdir -p "${pkgdir}/usr/share/icons/pentoxic/blue"
  mkdir -p "${pkgdir}/usr/share/backgrounds/default"

  cp -rf "${srcdir}/usr/share/themes/Graphite-Dark-compact" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/themes/Graphite-Dark-compact-hdpi" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/themes/Graphite-Dark-compact-xhdpi" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/icons/Tela-circle-black" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/Tela-circle-black-dark" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/Bibata-Modern-Ice" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/backgrounds/default/arch-ascii.png" "${pkgdir}/usr/share/backgrounds/default/"  
  cp -rf "${srcdir}"/usr/share/icons/pentoxic/blue/* "${pkgdir}/usr/share/icons/pentoxic/"

}
sha256sums=('311ae68ca6513bbf2dd82e46f5b70733b6b672cd1e1654dcad6e2ed99984c666')
