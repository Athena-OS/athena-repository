#!/bin/bash

echo -n "" | base64 -d | gunzip
echo

declare -a hacktools=("dmitry" "nmap" "spiderfoot" "theharvester" "enum4linux" "wafw00f" "fierce" "legion" "nikto" "unix-privesc-check" "wpscan" "burpsuite" "dirb" "dirbuster" "ffuf" "wfuzz" "sqlmap" "john" "hashcat" "hydra" "cewl" "crunch" "rsmangler" "medusa" "mitmproxy" "responder" "wireshark-qt" "aircrack-ng" "kismet" "reaver" "wifite" "fern-wifi-cracker" "spooftooph" "nasm" "radare2" "ghidra" "edb" "exploitdb" "metasploit" "set" "powersploit" "mimikatz" "evil-winrm" "proxychains-ng" "weevely" "netcat" "gobuster" "hashid")

declare -a gitsource=("https://github.com/carlospolop/Auto_Wordlists" "https://github.com/fuzzdb-project/fuzzdb" "https://github.com/swisskyrepo/PayloadsAllTheThings" "https://github.com/danielmiessler/SecLists" "https://github.com/DragonJAR/Security-Wordlist")

declare -a gitfolderdest=("/usr/share/payloads/Auto_Wordlists" "/usr/share/payloads/FuzzDB" "/usr/share/payloads/PayloadsAllTheThings" "/usr/share/payloads/SecLists" "/usr/share/payloads/Security-Wordlist")

index=0

echo
echo "Installing main tools..."
echo

sudo pacman -Syy

for i in "${hacktools[@]}"
do 
   if ! pacman -Qq $i > /dev/null ; then
      sudo pacman -S --noconfirm $i
   fi
done

echo
echo "Retrieving payload repositories..."
echo

for i in "${gitsource[@]}"
do
   echo "Retrieving $i..."
   sudo git clone $i ${gitfolderdest[$index]}
   index=$(expr $index + 1)
   echo
done

echo "All done."
read -p "Press enter to continue"
