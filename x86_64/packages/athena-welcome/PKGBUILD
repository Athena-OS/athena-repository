pkgname="athena-welcome"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Welcome App for Athena"
arch=("x86_64")
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel/.config/athena-welcome"
  mkdir -p "${pkgdir}/etc/skel/.config/autostart"
  mkdir -p "${pkgdir}/usr/local/bin"
  mkdir -p "${pkgdir}/usr/share/applications"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/scalable/apps"

  cp -rf "${srcdir}/etc/skel/.config/athena-welcome/settings.conf" "${pkgdir}/etc/skel/.config/athena-welcome/"
  cp -rf "${srcdir}/etc/skel/.config/autostart/athena-welcome.desktop" "${pkgdir}/etc/skel/.config/autostart/"  
  cp -rf "${srcdir}/usr/local/bin/athena-welcome" "${pkgdir}/usr/local/bin/"
  cp -rf "${srcdir}/usr/share/applications/athena-welcome.desktop" "${pkgdir}/usr/share/applications/"
  cp -rf "${srcdir}/usr/share/icons/hicolor/scalable/apps/arcolinux-hello.svg" "${pkgdir}/usr/share/icons/hicolor/scalable/apps/"
  cp -rf "${srcdir}/usr/share/athena-welcome" "${pkgdir}/usr/share/"
}
sha256sums=('08f308abcf60dcde8c2b257f84b1aadda9e5808ca6701f96f58915ad7706c640')
