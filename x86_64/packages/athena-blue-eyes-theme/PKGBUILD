pkgname=athena-blue-eyes-theme
pkgver=1.0.0
pkgrel=2
pkgdesc="Blue Eyes samurai theme with Tokyo Night Dark icons for Athena"
arch=('x86_64')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/share/themes"
  mkdir -p "${pkgdir}/usr/share/icons/pentoxic/cyan"
  mkdir -p "${pkgdir}/usr/share/backgrounds/default"  

  cp -rf "${srcdir}/usr/share/themes/Tokyonight-Dark-B" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/icons/tokyonight_dark" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/oreo_spark_lite_cursors" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/backgrounds/default/blue-eyes.jpg" "${pkgdir}/usr/share/backgrounds/default/"
  cp -rf "${srcdir}"/usr/share/icons/pentoxic/cyan/* "${pkgdir}/usr/share/icons/pentoxic/"

}
sha256sums=('a0f53759bf457f7235860375bce2541866a4f568ef028172f1ccc1541c9ddd93')
