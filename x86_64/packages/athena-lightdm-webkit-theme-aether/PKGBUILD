# Maintainer: Noi Sek <noi.t.sek | gmail>

pkgname=athena-lightdm-webkit-theme-aether
pkgver=2.2.2
pkgrel=2
pkgdesc="A sleek, customizable Archlinux theme for lightdm."
arch=('any')
url="https://github.com/NoiSek/Aether"
license=('GPL3')
depends=('lightdm' 'lightdm-webkit2-greeter' 'ttf-opensans')
install='lightdm-webkit-theme-aether.install'
changelog='changelog.txt'
#source=("https://github.com/NoiSek/Aether/archive/v$pkgver.tar.gz")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/share/lightdm-webkit/themes"

  cp -rf "${srcdir}/usr/share/lightdm-webkit/themes/lightdm-webkit-theme-aether" "${pkgdir}/usr/share/lightdm-webkit/themes/"
}
sha256sums=('7a11536bb9237dfa8e1f5213782c2d14feee3155c9a1494d002c07ab8c62ff02')
