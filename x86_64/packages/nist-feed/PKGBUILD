pkgname="nist-feed"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="NIST NVD feed and popup notifications"
arch=("x86_64")
license=("custom")
depends=('cron' 'dunst')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/local/bin"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/scalable/apps"

  cp -rf "${srcdir}/usr/share/icons/hicolor/scalable/apps/cve.svg" "${pkgdir}/usr/share/icons/hicolor/scalable/apps/"

  install -Dm755 "${srcdir}/usr/local/bin/nist-feed" "${pkgdir}/usr/local/bin/"
}
sha256sums=('000e57987d1d620bdb3ce89cbddba6c1c9e9b1cfe21042195bd507c4db8ba782')
