pkgname=athena-firefox-config
pkgver=1.0.0
pkgrel=1
pkgdesc="Mozilla Firefox configuration for Athena"
arch=('any')
license=("custom")
depends=('athena-nightab' 'firefox-esr' 'profile-sync-daemon')
source=("$pkgname.tar.gz")

package() {
  install -dm 700 "${pkgdir}/etc/skel/.mozilla/firefox-esr/iso1fa16.default-release"

  cp -rf "${srcdir}/etc/skel/.mozilla" "${pkgdir}/etc/skel/"
  cp -rf "${srcdir}/etc/skel/.config/psd" "${pkgdir}/etc/skel/.config/"  
  
}
sha256sums=('14db8012b1c2326539c0a651b45d5f0ab6e1547face33ad4607881cdf8d8c7f3')
